---
const { href } = Astro.props;
const isActive = Astro.url.pathname.startsWith(href);
---

<a href={href} class:list={[{ active: isActive }]}>
  <slot />
</a>

<style>
    a.active {
    border-top: 1px solid var(--colour-secondary);
    border-bottom: 2px solid var(--colour-secondary);
  }
</style>
