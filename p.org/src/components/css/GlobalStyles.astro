---
import Fonts from "./Fonts.astro";
import Colours from "./Colours.astro";
---

<Fonts />
<Colours />

<style is:global>
  /* https://css-tricks.com/the-current-state-of-styling-scrollbars-in-css/ */
  :root {
    --colour-scrollbar-thumb: var(--colour-secondary);
    --colour-scrollbar-ground: var(--colour-background);
  }

  body {
    /* Foreground, Background */
    scrollbar-color: var(--colour-scrollbar-thumb) var(--colour-scrollbar-ground);
  }

  body::-webkit-scrollbar {
    width: 0.5rem; /* Mostly for vertical scrollbars */
    height: 0.5rem; /* Mostly for horizontal scrollbars */
  }

  body::-webkit-scrollbar-thumb {
    /* Foreground */
    background: var(--colour-scrollbar-thumb)
  }

  body::-webkit-scrollbar-track {
    /* Background */
    background: var(--colour-scrollbar-ground)
  }

  body,
  nav,
  .panel {
    /* https://www.transparenttextures.com/ */
    background-image: url("/assets/backgrounds/groove-paper-texture.png");
    background-repeat: repeat;
  }

  .project-readme {
    & ul {
      list-style-type: disc;
      margin-left: 2rem;
    }
  }

  a {
    text-decoration: none;
    color: var(--colour-secondary);
  }

  a:hover {
    color: var(--colour-highlight);
  }

  nav {
    margin-inline: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;

    background-color: var(--colour-primary);
    border-top: 1px solid var(--colour-main);
    border-bottom: 1px solid var(--colour-main);

    & a {
      color: var(--colour-background);
      font-family: var(--font-strong);
      text-transform: uppercase;
      font-size: 1rem;
      text-shadow: 0.1rem 0.1rem 0.1rem var(--colour-main);
    }
  }

  ul {
    margin-left: 0;
    padding-left: 0;
    list-style-type: none;
  }

  p {
    text-align: justify;
    margin-inline: auto;
    line-height: 1.5rem;
    font-size: 1rem;
    margin-block: 0.5rem;
  }

  .panel {
    background-color: var(--colour-secondary);
    padding: 1.2rem;
    border-radius: 0.2rem;
    border: 0.5rem solid var(--colour-highlight);
    color: var(--colour-background);
    font-size: 1.1rem;

    & h2::after {
      background-image: none;
    }

    & a {
      color: var(--colour-primary);
      font-family: var(--font-fancy);
      text-shadow:
        -1px -1px 0 var(--colour-background),
        1px -1px 0 var(--colour-background),
        -1px 1px 0 var(--colour-background),
        1px 1px 0 var(--colour-background);
      font-variant: small-caps;
      font-size: 1.7rem;
    }

    & a:hover {
      color: var(--colour-secondary);
    }

    & * {
      line-height: 1.5rem;
    }
  }

  img,
  video {
    width: clamp(200px, 90%, 500px);
    margin-bottom: 1rem;
    display: block;
  }

  img,
  iframe,
  video {
    margin-inline: auto;
    border-radius: 0.5rem;
  }

  h2,
  h3,
  h4 {
    margin: 0;
    font-family: var(--font-strong);
  }

  h2 {
    text-align: center;
    font-size: clamp(1rem, -0.5rem + 8vw, 2rem);
    margin-top: 1rem;
  }

  h3 {
    font-size: clamp(1rem, -0.7rem + 8vw, 1.5rem);
  }

  h2::after {
    content: "";
    display: block;
    background-image: url("/assets/flourishes/divider.svg");
    background-repeat: no-repeat;
    background-position-x: center;
    background-position-y: center;
    background-size: 50%;
    height: 2rem;
  }

  @media only screen and (min-width: 500px) {
    h2::after {
      background-size: 20%;
      padding-bottom: 1rem;
    }
  }

  pre,
  code {
    font-family: var(--font-mono);
  }

  pre {
    color: var(--colour-background);
    background-color: var(--colour-main);
    overflow-x: scroll;
    max-width: 80dvw;
    margin-inline: auto;
    padding: 1rem;
    overflow: auto;
    margin-block: 1rem;
  }

  code {
    font-size: 0.9rem;
  }

  @media only screen and (min-width: 600px) {
    pre {
      max-width: 65dvw;
    }
  }

  blockquote {
    border-left-width: 2px;
    border-left-style: solid;
    border-left-color: var(--colour-highlight);
    padding-left: 1rem;
  }

  table,
  th,
  td {
    border: 1px solid var(--colour-primary);
    border-collapse: collapse;
    margin-left: auto;
    margin-right: auto;
  }

  th,
  td {
    padding: 0.5rem;
  }

  .maths {
    width: 100%;
    display: grid;
  }

  math {
    font-size: clamp(1rem, -0.7rem + 8vw, 2rem);
    font-family: var(--font-fancy);
    color: var(--colour-primary);
  }
</style>
