---
import FooterItems from "../data/footer.yaml";
---

<nav>
  {
    FooterItems.map((item) => (
      <a href={item.url} title={item.title}>
        <span class:list={["mdi", `mdi-${item.mdi}`]} />
      </a>
    ))
  }
</nav>

<style>
  nav {
    height: 2rem;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
</style>
