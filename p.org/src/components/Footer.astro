---
import FooterItems from "../data/footer.yaml";
import Logos from "../data/logos.yaml";
---

<nav>
  {
    FooterItems.map((item) => (
      <a href={item.url} title={item.title} class="footer-link">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d={Logos[item.icon].data} />
        </svg>
      </a>
    ))
  }
</nav>

<style>
  nav {
    height: 2rem;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  svg {
    width: 1rem;
    margin-inline: auto;
    & path {
      fill: var(--colour-background);
      filter: drop-shadow(0.1rem 0.1rem 0.1rem var(--colour-main));
    }

    &:hover path {
      fill: var(--colour-highlight);
    }
  }
</style>
