---
const footerItems = [
  {
    url: "//creativecommons.org/licenses/by-nc-sa/4.0/",
    title: "all content released under a CC BY-NC-SA 4.0 license",
    mdi: "creative-commons",
  },
  {
    url: "//github.com/pikesley/pikesley.org.astro",
    title: "this repo on github",
    mdi: "github",
  },
];
---

<footer>
  {
    footerItems.map((item) => (
      <span>
        <a href={item.url} title={item.title}>
          <span class:list={["mdi", `mdi-${item.mdi}`]} />
        </a>
      </span>
    ))
  }
</footer>

<style>
  footer {
    display: flex;
    flex-wrap: wrap;
    align-items: center;

    max-width: 100%;
    align-self: end;
    height: 3rem;
    font-size: 2rem;

    align-items: center;
    justify-content: center;

    border-top-width: 1px;
    border-top-style: solid;
    grid-area: footer;
  }

  span {
    text-align: center;
    margin-inline: 0.2rem;
  }
</style>
