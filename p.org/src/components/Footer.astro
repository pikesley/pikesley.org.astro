---
import FooterItems from "../data/footer.yaml";
import Logo from "../components/Logo.astro";
---

<nav>
  {
    FooterItems.map((item) => (
      <a href={item.url} title={item.title} class="footer-link">
        <Logo logoName={item.icon} klass="footer" />
      </a>
    ))
  }
</nav>

<style>
  nav {
    height: 2rem;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
</style>

<style is:global>
  svg.footer {
    width: 1rem;
    margin-inline: auto;
    & path {
      fill: var(--colour-background);
      filter: drop-shadow(0.1rem 0.1rem 0.1rem var(--colour-main));
    }

    &:hover path {
      fill: var(--colour-highlight);
    }
  }
</style>
