---
import Fonts from "./Fonts.astro";
---
<Fonts />

<style is:global>
    :root {
      --me-links: 3;
      --max-width: 60rem;
      --grid-gap: 1rem;
      --buffer: 0.5rem;
      --corner-radius: 0.5rem;
      --shadow-offset: 1px;
      --colour-bg: rgb(18, 10, 3);
      --colour-bg-light: rgb(119, 79, 43);
      --colour-primary: rgb(236, 143, 13);
      --colour-link: rgb(6, 173, 9);
      --colour-link-hover: rgb(2, 72, 3);
      --colour-shadow: rgb(0, 0, 0);
    }

    h1,
    h2 {
      text-align: center;
      margin: 0;
    }

    h2 {
      font-size: 2.5rem;
      margin-top: 1rem;
    }

    ul {
      margin-left: 0;
      padding-left: 0;
      list-style-type: none;
    }

    /* things within rendered content */
    /* .project-readme {
      max-width: 100dvw;
    } */

    .from-markdown ul {
      list-style-type: disc;
      margin-left: 2rem;
    }

    .from-markdown img {
      max-width: 100%;
    }

    pre, code {
      font-family: var(--font-mono);
    }
    pre {
      background-color: black;
      overflow-x: scroll;
      max-width: 80dvw;
      margin-inline: auto;
      padding: 1rem;
      overflow: auto;
    }

    code {
      white-space: pre;
      font-size: 0.9rem;
    }

    a {
      text-decoration: none;
      color: var(--colour-link);
    }

    a:hover {
      color: var(--colour-link-hover);
    }

    p {
      text-align: justify;
    }

    img {
      border-radius: var(--corner-radius);
    }

    blockquote {
      border-left-width: 2px;
      border-left-style: solid;
      border-left-color: var(--colour-primary);
      padding-left: 1rem;
    }

    table,
    th,
    td {
      table-layout: fixed;
      border: 1px solid;
      border-collapse: collapse;
      margin-left: auto;
      margin-right: auto;
    }

    th,
    td {
      padding: 0.5rem;
    }

  /* responsive video */
  /* https://techstacker.com/how-to-responsive-youtube-videos/ */
  div.video-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
    margin-bottom: 2rem;
    margin-top: 1rem;
    border-radius: var(--corner-radius);
  }

  div.video-wrapper::after {
    display: block;
    content: "";
    padding-top: 56.25%;
  }

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  </style>
