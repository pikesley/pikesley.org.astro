---
import Fonts from "./Fonts.astro";
import Colours from "./Colours.astro";
---

<Fonts />
<Colours />

<style is:global>
  :root {
    --me-links: 3;
  }

  body {
    color: var(--palette-black);
  }

  nav {
    margin-inline: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;

    background-image: url("/assets/backgrounds/twill.png");
    background-color: var(--palette-red);
    border-top: 1px solid var(--palette-black);
    border-bottom: 1px solid var(--palette-black);
  }

  nav a {
    color: var(--palette-ecru);
    font-family: var(--font-strong);
    text-transform: uppercase;
    font-size: 1rem;
    text-shadow: 0.1rem 0.1rem 0.1rem var(--palette-black);
  }

  nav a:hover {
    color: var(--palette-blue);
  }

  a {
    text-decoration: none;
    color: var(--palette-blue);
  }

  a:hover {
    color: var(--palette-gold);
  }

  h1 {
    font-family: var(--font-fancy);
    margin: 0;
  }

  h1,
  h2 {
    text-align: center;
  }

  h2,
  h3,
  h4 {
    margin: 0;
    font-family: var(--font-strong);
  }

  h2 {
    font-size: clamp(1rem, -0.5rem + 8vw, 2.5rem);
    margin-top: 1rem;
  }

  ul {
    margin-left: 0;
    padding-left: 0;
    list-style-type: none;
  }

  .from-markdown ul {
    list-style-type: disc;
    margin-left: 2rem;
  }

  .from-markdown img {
  }

  pre,
  code {
    font-family: var(--font-mono);
  }

  pre {
    color: var(--palette-ecru);
    background-color: var(--palette-black);
    overflow-x: scroll;
    max-width: 80dvw;
    margin-inline: auto;
    padding: 1rem;
    overflow: auto;
  }

  code {
    font-size: 0.9rem;
  }

  p {
    text-align: justify;
    margin-inline: auto;
    line-height: 1.5rem;
    font-size: 1.2rem;
  }

  img {
    border-radius: 0.5rem;
    width: clamp(200px, 90%, 500px);
    margin-inline: auto;
    margin-bottom: 1rem;
    display: block;
  }

  blockquote {
    border-left-width: 2px;
    border-left-style: solid;
    border-left-color: var(--palette-gold);
    padding-left: 1rem;
  }

  table,
  th,
  td {
    table-layout: fixed;
    border: 1px solid;
    border-collapse: collapse;
    margin-left: auto;
    margin-right: auto;
  }

  th,
  td {
    padding: 0.5rem;
  }

  /* responsive video */
  /* https://techstacker.com/how-to-responsive-youtube-videos/ */
  div.video-wrapper {
    position: relative;
    overflow: hidden;
    width: 100%;
    margin-bottom: 2rem;
    margin-top: 1rem;
    border-radius: 0.5rem;
    width: clamp(200px, 100%, 700px);
    margin-inline: auto;
  }

  div.video-wrapper::after {
    display: block;
    content: "";
    padding-top: 56.25%;
  }

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  @media only screen and (min-width: 600px) {
    pre {
      max-width: 65dvw;
    }
  }
</style>
