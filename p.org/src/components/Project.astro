---
export interface Props {
  project: {
    url: string,
    title: string,
    description: string
  }
}

const { project } = Astro.props;
---

<li>
  <div class="project-name">
    <a href={project.url}>{project.title}</a>
  </div>

  <div>
    <span set:html={project.description} />
  </div>
</li>

<style>
  :root {
    --panel-height: 10rem;
    --panel-width: 15rem;
  }

  li {
    margin: auto;
    flex-grow: 1;
    text-align: center;
    height: var(--panel-height);
    max-width: var(--panel-width);
    background-color: var(--palette-blue);
    padding: 1.2rem;
    border-radius: 0.2rem;
    border: 0.5rem solid var(--palette-gold);
    color: var(--palette-ecru);
  }

  .project-name a {
    color: var(--palette-red);
    font-family: var(--font-fancy);
    text-shadow:
      -1px -1px 0 var(--palette-ecru),
      1px -1px 0 var(--palette-ecru),
      -1px 1px 0 var(--palette-ecru),
      1px 1px 0 var(--palette-ecru);
    font-variant: small-caps;
    font-size: 1.7rem;
  }

  .project-name a:hover {
    color: var(--palette-blue);
  }

  div.project-name {
    height: calc(var(--panel-height) / 2);
    font-size: 2.5rem;
  }
</style>
