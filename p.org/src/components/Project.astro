---
export interface Props {
  project: {
    url: string;
    title: string;
    description: string;
  };
}

const { project } = Astro.props;
---

<li class="panel">
  <h2 class="project-name">
    <a href={project.url}
    >{project.title}</a>
  </h2>

  <section>
    <span set:html={project.description} />
  </section>
</li>

<style>
  :root {
    --panel-height: 14rem;
    --panel-width: 15rem;
  }

  li {
    margin: auto;
    flex-grow: 1;
    text-align: center;
    height: var(--panel-height);
    max-width: var(--panel-width);
    margin-bottom: 1rem;
  }

  .project-name {
    height: calc(var(--panel-height) / 2.5);
    font-size: 2.5rem;
    margin: 0;
    padding: 0;
    padding-top: 1rem;
    white-space: nowrap;
  }
</style>
