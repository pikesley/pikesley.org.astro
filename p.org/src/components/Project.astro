---
export interface Props {
  project: {
    url: string;
    title: string;
    description: string;
  };
}

const { project } = Astro.props;
---

<li>
  <a href={project.url}>
    <h3>
      {project.title}
    </h3>
  </a>
  <span set:html={project.description} />
</li>

<style>
  li {
    display: grid;
    grid-template-rows: 1fr 2fr;
    gap: 1rem;
    text-align: center;
    height: 11rem;
    width: 60%;
    background-color: rgba(0, 0, 0, 0.2);
    padding: 1rem;
    padding-top: 2rem;
    border-radius: var(--corner-radius);
    margin-inline: 2rem;
    align-items: top;
  }

  h3 {
    font-size: 2.5rem;
    margin: 0;
  }

  @media only screen and (min-width: 600px) {
    li {
      width: 40%;
    }
  }
</style>
