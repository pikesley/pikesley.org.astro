<script is:inline src="/vendor/snowfall-js-main/snowfall.js"></script>

<script>
  const today = new Date();
  if (
    today.getMonth() == 11 || // December
    (today.getMonth() == 0 && today.getDate() <= 5) // or before 12th night
  ) {
    const totalFlakes = 16;
    const colourNames = ["primary", "secondary", "highlight"];

    for (let [index, colourName] of colourNames.entries()) {
      new Snowfall({
        // number of snowflakes
        count: totalFlakes / colourNames.length,
        // min/max size
        minRadius: 4,
        maxRadius: 32,
        // min/max speed
        minSpeed: 1,
        maxSpeed: 4,

        text: "\u2746",
        zIndex: index - 1,

        color: getComputedStyle(
          document.documentElement,
          null
        ).getPropertyValue("--colour-" + colourName),
      });
    }
  }
</script>
