---
import { marked } from "marked";

export interface Props {
  employer: Object;
}

const { employer } = Astro.props;
---

<li class="employer">
  <h4>{employer.dates.start} - {employer.dates.end}</h4>
  <h3>
    {employer.role} at
    {employer.url && <a href={employer.url}>{employer.name}</a>}
    {!employer.url && employer.name}
  </h3>

  <h4>
    {employer.headline}
  </h4>

  <div set:html={marked.parse(employer.profile)}></div>
</li>
