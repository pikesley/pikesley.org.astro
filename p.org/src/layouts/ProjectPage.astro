---
import Base from "./Base.astro";
import MastodonComments from "../components/MastodonComments.astro";

export interface Props {
  content: string;
  title: string;
  description: string;
  GHslug: string;
  mastodon?: string;
}

const { content, title, description, GHslug, mastodon } = Astro.props;
---

<Base title={title} titlePrefix="Projects" description={title}>
  <div class="project">
    <div class="project-readme" set:html={content} />
    <span>
      <a href=`//github.com/${ GHslug }` class="github-link">{title} on Github</a>
      </span>
  </div>
  {mastodon && <MastodonComments mastodon={mastodon}>}
</Base>
